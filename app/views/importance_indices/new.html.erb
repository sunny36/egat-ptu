<h1>New importance_index</h1>

<% form_for(@importance_index) do |f| %>
  <%= f.error_messages %>
  <%= f.label 'Transformer Name' %>
  <input id="example" />
  <br/><br/>
  <%= f.label 'Bus Voltage: HV side' %>
  <%= 
    @bus_voltage_hvs = BusVoltageHv.find(:all, :order => "value")
    f.collection_select(:bus_voltage_hv_id,  
                        @bus_voltage_hvs, :id, :value, {:prompt => false})
  %>&nbsp;<strong>[kV]</strong>&nbsp;&nbsp;&nbsp;
  <%= f.label 'System Fault Level: HV side' %>
  <%= f.text_field :system_fault_level_hv, :size => 4 %>
  &nbsp;<strong>[kA]</strong>&nbsp;&nbsp;&nbsp;
  <%= f.text_field :mva_hv, :size => 10 %><strong>[MVA]</strong>
  <br/><br/>
  <%= f.label 'Bus Voltage: LV side' %>
  <%= 
    @bus_voltage_lvs = BusVoltageLv.find(:all, :order => "value")
    f.collection_select(:bus_voltage_hv_id,  
                        @bus_voltage_lvs, :id, :value, {:prompt => false})
  %>&nbsp;<strong>[kV]</strong>&nbsp;&nbsp;&nbsp;
  <%= f.label 'System Fault Level: LV side' %>
  <%= f.text_field :system_fault_level_hv, :size => 4 %>
  &nbsp;<strong>[kA]</strong>&nbsp;&nbsp;&nbsp;
  <%= f.text_field :mva_hv, :size => 10 %><strong>[MVA]</strong>
  
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', importance_indices_path %>